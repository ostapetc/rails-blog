<h1>Listing tasks</h1>

<table class="table">
  <tr>
    <th>Description</th>
    <th>Status</th>
    <th>Created At</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.created_at.strftime('%B %d, %Y') %></td>
    <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', task, class: 'btn btn-danger', method: :delete, data: { confirm: 'Delete this task?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>
