<article class="page">
  <h1><%= page.title %></h1>

  <% if preview %>
      <%= page.text.truncate 1000 %>
  <% else %>
      <%= page.text %>
  <% end %>

  <hgroup>
    <% if preview %>
        <%= link_to 'Read more', page, class: 'btn btn-primary' %>
    <% end %>

    <%= link_to 'Edit', edit_page_path(page), class: 'btn btn-success' %>
  </hgroup>
</article>
