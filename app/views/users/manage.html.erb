<h1>Users managment</h1>

<table class="table table-bordered">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Provider</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.provider %></td>
        <td><%= l user.created_at, :format => :long %></td>
        <td><%= l user.updated_at, :format => :long %></td>
      </tr>
    <% end %>
</table>

